<%= form_for @restaurant do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prevented this form from being submitted.</h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    </div>
  <% end %>



  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :cuisine %>
    <%= f.select :cuisine, options_for_select(%w[American Italian Indian Chinese Tapas]) %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :max_occupancy %>
    <%= f.text_field :max_occupancy %>
  </div>
  <div>
    <%= f.label :average_price %>
    <%= f.select :average_price, options_for_select(["Cheap", "Below Average", "Above Average", "Expensive" ]) %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.submit "Done!" %>
  </div>
<% end %>